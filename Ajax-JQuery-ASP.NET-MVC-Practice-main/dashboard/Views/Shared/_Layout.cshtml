    <script>

        $(document).ready(function () {

            $(".sidebar a").each(function () {



                if ($(this).attr("href") === "/") {

                    $(this).addClass("active");
                    return;

                }
                if (window.location.href.indexOf($(this).attr("href")) > -1) {

                    $(".sidebar a").removeClass("active");
                    $(this).addClass("active");

                }


            });



            //$('.sidebar a').click(function (e) {

